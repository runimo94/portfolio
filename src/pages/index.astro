---
import Layout from "../layouts/Layout.astro";
import Header from "../components/HeaderComponents/HeaderNav.astro";
import Inicio from "../components/InicioComponents/Inicio.astro";
import AboutMe from "../components/AboutComponents/Aboutme.astro";
import Projects from "../components/ProjectsComponents/Projects.astro";
import Skills from "../components/SkillsComponents/Skills.jsx";
import Contact from "../components/ContactComponents/Contact.astro";
---

<Layout>
  <div class="w-screen">
    <Header />

    <div class="flex flex-col items-center gap-y-16 w-full">
      <div class="px-6 sm:px-10 md:px-20 lg:px-24 2xl:px-72">
        <Inicio />
      </div>

      <div class="content-reveal bg-gray-900 w-full flex justify-center py-12">
        <div class="flex flex-col items-center container bg-gray-900 gap-y-28 ">
        <AboutMe />
        <Projects />
        <div class="skills-reveal w-full">
          <Skills client:only/>
        </div>
        <Contact/>
        </div>
      </div>

			<div class="mb-32"></div>

    </div>
  </div>
</Layout>
