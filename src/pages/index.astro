---
import Layout from "../layouts/Layout.astro";
import Header from "../components/HeaderComponents/HeaderNav.astro";
import Inicio from "../components/InicioComponents/Inicio.astro";
import AboutMe from "../components/AboutComponents/Aboutme.astro";
import Projects from "../components/ProjectsComponents/Projects.astro";
import Skills from "../components/SkillsComponents/Skills.jsx";
import Contact from "../components/ContactComponents/Contact.astro";
---

<Layout>
  <div class="w-screen">
    <Header />

    <div class="flex flex-col items-center gap-y-16 w-full">
      <div class="px-6 sm:px-10 md:px-20 lg:px-24 2xl:px-72">
        <Inicio />
      </div>

      <div class="content-reveal w-full flex justify-center">
        <div class="flex flex-col items-center container gap-y-28 py-20">
          <AboutMe />
          <Projects />
          <div class="skills-reveal w-full">
            <Skills client:only />
          </div>
          <Contact />
        </div>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .hacktext_hover_effect,
  .hacktext {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
    color: white;
    padding: 0rem clamp(1rem, 2vw, 3rem);
    border-radius: clamp(0.4rem, 0.75vw, 1rem);
  }

  .hacktext_hover_effect:hover {
    background-color: white;
    color: black;
  }
</style>
