---
import Layout from "../layouts/Layout.astro";
import Header from "../components/HeaderNav.astro";
import Inicio from "../components/Inicio.astro";
import AboutMe from "../components/Aboutme.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
---

<Layout>
  <div class="w-screen">
    <Header />

    <div class="flex flex-col items-center gap-y-16 w-full">
      <div class="px-6 sm:px-10 md:px-20 lg:px-24 2xl:px-72">
        <Inicio />
      </div>

      <div class="bg-gray-900 w-full flex justify-center py-12">
        <div class="flex flex-col items-center container bg-gray-900 gap-y-28 ">
        <AboutMe />
        <Projects />
        <Skills/>
        </div>
      </div>

			<div class="mb-32"></div>

    </div>
  </div>
</Layout>
