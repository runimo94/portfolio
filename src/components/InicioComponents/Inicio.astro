---
import Button from './Button.astro'
import {dataInicio} from '../../config/config'
---

<section id="Inicio" class="inicio-reveal h-screen flex items-center justify-center w-full">
  <div class="flex flex-col gap-y-5">
    <h1
      class="text-[2.5rem] md:text-[3rem] lg:text-[4rem] xl:text-[5rem] font-bold text-center md:text-end font-LexendDeca text-transparent bg-clip-text bg-gradient-to-r from-color1 to-color2"
    >
      <span>{dataInicio.textHeader}</span>
      <br />{dataInicio.textHeader2}
    </h1>

    <div class="flex flex-col items-center justify-center md:items-end md:justify-end md:flex-row text-white gap-x-10 gap-y-5">
      {
        dataInicio.listButtons.map((btn) => {
          return(
            <>
              <Button text={btn.text} url={btn.url}/>
            </>
          )
        })
      }
    </div>

  </div>
</section>