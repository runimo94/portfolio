---
import Button from "./Button.astro";
import { dataInicio } from "../../config/config";
---

<section
  id="Inicio"
  class="inicio-reveal h-screen flex items-center justify-center w-full"
>
  <div class="flex flex-col gap-y-5">
    <h1
      class="text-[2.5rem] text-white md:text-[3rem] lg:text-[4rem] xl:text-[5rem] font-bold text-center md:text-end font-mono"
    >
      <span>{dataInicio.textHeader}</span>
      <span class="hacktext whitespace-nowrap" data-value={dataInicio.name}
        >{dataInicio.name}</span
      >
      <span class="hacktext whitespace-nowrap hidden sm:inline-block" data-value={dataInicio.textHeader2 + " " + dataInicio.textHeader3}>
        {dataInicio.textHeader2 + " " + dataInicio.textHeader3}
      </span>

      <span class="hacktext sm:hidden text-end" data-value={dataInicio.textHeader2}>
        {dataInicio.textHeader2}
      </span>
      <span class="hacktext sm:hidden text-end" data-value={dataInicio.textHeader3}>
        {dataInicio.textHeader3}
      </span>
    </h1>

    <div
      class="flex flex-col items-center justify-center md:items-end md:justify-end md:flex-row text-white gap-x-10 gap-y-5"
    >
      {
        dataInicio.listButtons.map((btn) => {
          return (
            <>
              <Button text={btn.text} url={btn.url} />
            </>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .hacktext {
    background-color: #1e293b;
    padding: 0rem clamp(1rem, 2vw, 3rem);
    border-radius: clamp(0.4rem, 0.75vw, 1rem);
  }

  .hacktext:hover {
    background-color: white;
    color: black;
  }
</style>