---
interface Props {
  text: string;
  url: string;
}

const { text, url } = Astro.props as Props;
---

<a href={url} class="font-LexendDeca text-lg sm:text-base lg:text-xl"
  ><span>{text}</span></a
>

<style>
  a {
    align-items: center;
    background-image: linear-gradient(144deg, #af40ff, #5b42f3 50%, #00ddeb);
    border: 0;
    border-radius: 8px;
    box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
    box-sizing: border-box;
    color: #ffffff;
    text-align: center;
    display: flex;
    justify-content: center;
    line-height: 1em;
    max-width: 100%;
    min-width: 200px;
    padding: 4px;
    text-decoration: none;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.3s;
  }

  a:active,
  a:hover {
    outline: 0;
  }

  a span {
    background-color: rgb(5, 6, 45);
    padding: 16px 24px;
    border-radius: 6px;
    width: 100%;
    height: 100%;
    transition: 300ms;
  }

  a:hover span {
    background: none;
  }

  a:active {
    transform: scale(0.9);
  }
</style>
